---
import Redes from "../components/Redes.astro";
const {
  title = "The Frame — Hero One",
  subtitle = "Un juego argentino de terror psicológico",
  secondTitle = "Teaser",
  secondSubtitle = "Another 100vh panel — use this for features, CTAs, or immersive content.",
  heroImage = "/images/theframe-hero.jpg",
  secondImage = "/images/theframe-hero2.jpg",
  videoId = "pM-AsziA5Pc",
} = Astro.props;
---

<main class="text-white">
  <!-- HERO 1 -->
  <section
    id="first"
    class="relative min-h-screen flex flex-col items-center justify-center text-center px-8 overflow-hidden"
  >
    <img
      src={heroImage}
      alt="Hero background"
      class="absolute inset-0 w-full h-full object-cover object-center"
      loading="lazy"
    />
    <div class="absolute bottom-24 left-1/2 -translate-x-1/2 z-10 text-center px-4">
        <p class="text-lg md:text-xl text-white opacity-90 max-w-[720px] mx-auto">
        {subtitle}
        </p>
    </div>
  </section>

  <!-- HERO 2 -->
  <section
    id="second"
    class="relative min-h-screen flex flex-col items-center justify-center text-center px-8 overflow-hidden"
  >
    <img
      src={secondImage}
      alt="Second hero background"
      class="absolute inset-0 w-full h-full object-cover object-center"
      loading="lazy"
    />

    <div class="relative z-10">
      <h2 class="m-0 mb-2 text-[clamp(1.25rem,3vw,2rem)] font-semibold drop-shadow">
        {secondTitle}
      </h2>
      <div
        class="relative w-full mx-auto rounded-xl overflow-hidden shadow-2xl"
        style="padding-top: 56.25%;"
      >
        <iframe
          class="absolute inset-0 w-full h-full"
          src={`https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1`}
          title="The Frame - Trailer"
          width="1000"
          height="750"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen></iframe>
      </div>
      <Redes />
    </div>
  </section>
</main>
