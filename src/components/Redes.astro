---
const {
  title = "¡Síguenos en nuestras redes sociales!",
  subtitle = "Mantente al día con nuestras últimas noticias, lanzamientos y contenido exclusivo.",

  instagramUrl = "https://www.instagram.com/sandovaligames/",
  tiktokUrl = "https://www.tiktok.com/@sandovaligames",
  youtubeUrl = "https://www.youtube.com/@SANDOVALIGAMES",
  xUrl = "https://x.com/sandovaligames",
} = Astro.props;
---
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
  <h2 class="text-3xl font-extrabold text-white sm:text-4xl mb-4">
    {title}
  </h2>

  <p class="text-lg text-white mb-8">
    {subtitle}
  </p>

  <div class="mt-5 flex items-center justify-center gap-5">
    <!-- Instagram -->
    <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="group" aria-label="Instagram">
      <div class="p-2 rounded-full bg-white/15 group-hover:bg-white/25 transition">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="h-6 w-6" fill="currentColor" aria-hidden="true">
          <path d="M224,202.66A53.34,53.34,0,1,0,277.34,256,53.38,53.38,0,0,0,224,202.66Zm124.71-41a54,54,0,0,0-30.69-30.69C298.18,119,224,119,224,119s-74.18,0-94,12a54,54,0,0,0-30.69,30.69C87,161.82,87,236,87,236s0,74.18,12,94a54,54,0,0,0,30.69,30.69c19.86,12,94,12,94,12s74.18,0,94-12A54,54,0,0,0,348.71,330c12-19.86,12-94,12-94S360.71,161.82,348.71,161.66ZM224,338a82,82,0,1,1,82-82A82.09,82.09,0,0,1,224,338Zm85-148a19,19,0,1,1,19-19A19,19,0,0,1,309,190Z"/>
        </svg>
      </div>
    </a>

    <!-- TikTok -->
    <a href={tiktokUrl} target="_blank" rel="noopener noreferrer" class="group" aria-label="TikTok">
      <div class="p-2 rounded-full bg-white/15 group-hover:bg-white/25 transition">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="h-6 w-6" fill="currentColor" aria-hidden="true">
          <path d="M448,209.91a210.13,210.13,0,0,1-122.77-39.3V349.4A162.6,162.6,0,1,1,162.6,186.8a161.2,161.2,0,0,1,19.8,1.23v82.47a80.18,80.18,0,1,0,59.67,77.9V0h83.16a123,123,0,0,0,1.9,22.5C335.41,83.54,385.3,130.89,448,141.1Z"/>
        </svg>
      </div>
    </a>

    <!-- YouTube -->
    <a href={youtubeUrl} target="_blank" rel="noopener noreferrer" class="group" aria-label="YouTube">
      <div class="p-2 rounded-full bg-white/15 group-hover:bg-white/25 transition">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="h-6 w-6" fill="currentColor" aria-hidden="true">
          <path d="M549.7 124.1c-6.3-23.7-24.9-42.3-48.6-48.6C458.8 64 288 64 288 64S117.2 64 74.9 75.5c-23.7 6.3-42.3 24.9-48.6 48.6C14.8 166.4 14.8 256 14.8 256s0 89.6 11.5 131.9c6.3 23.7 24.9 42.3 48.6 48.6C117.2 448 288 448 288 448s170.8 0 213.1-11.5c23.7-6.3 42.3-24.9 48.6-48.6C561.2 345.6 561.2 256 561.2 256s0-89.6-11.5-131.9zM232 338.5v-165l142 82.5-142 82.5z"/>
        </svg>
      </div>
    </a>

    <!-- X / Twitter -->
    <a href={xUrl} target="_blank" rel="noopener noreferrer" class="group" aria-label="X">
      <div class="p-2 rounded-full bg-white/15 group-hover:bg-white/25 transition">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-6 w-6" fill="currentColor" aria-hidden="true">
          <path d="M389.2 48h70.6L304.1 230.5 489.6 464H345L233.7 325.4 108.4 464H37.7L199.9 268.1 20.5 48H168.1l99.2 125.9L389.2 48zm-24.7 372.6h39.1L151.1 89.5H110.7l253.8 331.1z"/>
        </svg>
      </div>
    </a>
  </div>
</div>
